<div class="process-header row column">
  <div class="row column process-header__main"
    style="background-image:url(/images/barcelona-hero.jpg);">
    <div class="process-header__container row">
      <div class="columns medium-8 large-9 process-header__info">
        <div>
          <h1 class="text-highlight text-highlight--large heading1">
            <a href="info">Plan urbanístico de Gracia</a>
          </h1>
        </div>
        <div>
          <span class="text-highlight">Sarrià - Sant Gervasi</span>
          <span class="text-highlight">#urbaGracia</span>
        </div>
      </div>
      <div class="columns medium-4 large-3 process-header__actions">
          <div>
            <a href="" class="process-header__action">
              <span class="action-title">El proceso</span>
              <span class="action-icon">
                <svg class="icon">
                  <use xlink:href="#icon-info" />
                </svg>
              </span>
            </a>
          </div>
          <div>
            <a href="" class="process-header__action">
              <span class="action-title">Las fases</span>
              <span class="action-icon">
                <svg class="icon">
                  <use xlink:href="#icon-clock" />
                </svg>
              </span>
            </a>
          </div>
          <div>
            <a href="" class="process-header__action">
              <span class="action-title">Compartir</span>
              <span class="action-icon">
                <svg class="icon">
                  <use xlink:href="#icon-share" />
                </svg>
              </span>
            </a>
          </div>
      </div>
    </div>
    <%= partial 'partials/phase_nav' %>
  </div>
  <div class="row column">
    <%= partial 'partials/process_nav' %>
  </div>
</div>
